<UserControl x:Class="DragandDropTest.superRect"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="100" d:DesignWidth="100">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Rectangle Height="100" HorizontalAlignment="Left" x:Name="xRect" Fill="{Binding RectColourLocal}"
                   VerticalAlignment="Top" Width="100" />

        <TextBlock x:Name="xText" Text="{Binding RectTextLocal}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="White" FontWeight="Bold" ></TextBlock>
    </Grid>
</UserControl>
